<?xml version="1.0" encoding="utf-8"?>
<ui:NamedObjectTemplate  width="100%" height="100%" direction="vertical"
	xmlns="edu.isi.bmkeg.kefed.ui.*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:ui="edu.isi.bmkeg.kefed.component.view.ui.*">
	<!-- A tabbed pane for simple named objects with notes.
	
	     Inherits myObject, monotonic and diagram fields
	     Also inherits handleObjectNameChanged method. -->
	
	<mx:Label text="{label}" fontWeight="bold"/>
	<mx:HBox width="100%">
		<mx:Label text="Name"/>
		<mx:TextInput id="objectNameControl" width="100%" 
				text="{myObject.nameValue}"
				editable="{!monotonic}" enabled="{!monotonic}"
				valueCommit="handleObjectNameChanged(event)"/>
	</mx:HBox>
	<mx:TabNavigator id="tn"  width="100%" height="100%">
		<mx:Form label="Terms" width="100%" height="100%">
			<ui:OntologyIdFormItem label="Terms" direction="vertical" width="100%" height="100%"
				visible="{termLookupService != null}"
				myObject="{myObject}"
				termLookupService="{termLookupService}"/>
		</mx:Form>
		<ui:NotesComponent label="Notes" width="100%" height="100%" myObject="{myObject}"/>
	</mx:TabNavigator>
</ui:NamedObjectTemplate>
